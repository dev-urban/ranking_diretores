{
  "name": "ranking-diretores",
  "version": "1.0.0",
  "description": "Sistema de ranking de diretores com frontend React e backend Node.js",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd frontend && npm start",
    "client:install": "cd frontend && npm install",
    "client:build": "cd frontend && npm run build",
    "install-all": "npm install && npm run client:install",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run client:install && npm run client:build",
    "postinstall": "npm run client:install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
